<%- include('partials/header') %>

<div class="mb-12">
    <div class="flex items-center justify-between mb-6 border-b border-gray-800 pb-4">
        <div class="flex items-center gap-3">
            <div class="w-1.5 h-8 bg-pink-600 rounded-full shadow-[0_0_10px_rgba(236,72,153,0.5)]"></div>
            <h1 class="text-2xl font-black text-white tracking-tight uppercase">
                Video Terbaru
                <% if (currentPage > 1) { %>
                    <span class="text-gray-600 text-lg font-medium ml-2">/ Halaman <%= currentPage %></span>
                <% } %>
            </h1>
        </div>
        
        <div class="hidden md:block text-xs text-gray-500 font-medium bg-gray-900 px-3 py-1 rounded-full border border-gray-800">
            Total <%= typeof totalVideos !== 'undefined' ? totalVideos.toLocaleString() : '...' %> Video
        </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 md:gap-6 mb-8">
        <% videos.forEach((vid, index) => { %>
            <article class="group bg-gray-900 rounded-xl overflow-hidden border border-gray-800 hover:border-pink-500/50 transition-all duration-300 hover:shadow-[0_0_20px_rgba(236,72,153,0.15)] relative">
                <a href="/video/<%= vid.slug %>" class="block relative aspect-video overflow-hidden">
                    <% if (vid.thumbnail) { %>
                        <img src="<%= vid.thumbnail %>" alt="<%= vid.title %>" class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700 ease-out" loading="<%= index < 8 ? 'eager': 'lazy' %>">
                    <% } else { %>
                        <div class="w-full h-full bg-gray-800 flex items-center justify-center">
                            <span class="text-gray-600 text-xs">No Image</span>
                        </div>
                    <% } %>
            
                    <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
                    
                    <div class="absolute bottom-2 right-2 bg-black/80 backdrop-blur-md text-[10px] font-bold px-1.5 py-0.5 rounded text-white border border-white/10 shadow-sm">
                        <%= formatDuration(vid.duration_sec) %>
                    </div>
   
                    <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300">
                        <div class="w-10 h-10 bg-pink-600 rounded-full flex items-center justify-center shadow-lg transform scale-50 group-hover:scale-100 transition-transform">
                            <svg class="w-5 h-5 text-white ml-0.5" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M4.5 2.69l11.01 7.31L4.5 17.31V2.69z"></path>
                            </svg>
                        </div>
                    </div>
                </a>
                
                <div class="p-3">
                    <h2 class="font-bold text-sm leading-snug h-10 line-clamp-2 mb-2">
                        <a href="/video/<%= vid.slug %>" class="text-gray-200 group-hover:text-pink-400 transition-colors"><%= vid.title %></a>
                    </h2>
                    <div class="flex items-center justify-between pt-2 border-t border-gray-800/50">
                        <span class="text-[10px] uppercase tracking-wider text-gray-500 font-semibold">
                            <%= new Date(vid.upload_date).toLocaleDateString('id-ID', { day: '2-digit', month: 'short', year: 'numeric' }) %>
                        </span>
                        <span class="text-[9px] text-pink-400 font-bold border border-pink-500/30 px-1 rounded">HD</span>
                    </div>
                </div>
            </article>
        <% }) %>
    </div>
</div>

<% if (totalPages > 1) { %>
    <div class="flex justify-center items-center gap-2 mt-4 mb-20">
        <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>" class="w-10 h-10 flex items-center justify-center bg-gray-800 text-white rounded-lg hover:bg-pink-600 transition shadow-lg border border-gray-700 hover:border-pink-500" aria-label="Halaman sebelumnya">&larr;</a>
        <% } %>

        <div class="px-6 py-2 bg-gray-900 border border-gray-800 rounded-lg text-sm font-medium shadow-inner">
            <span class="text-pink-500 font-bold"><%= currentPage %></span>
            <span class="text-gray-600 mx-2">/</span>
            <span class="text-gray-400"><%= totalPages %></span>
        </div>

        <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>" class="w-10 h-10 flex items-center justify-center bg-gray-800 text-white rounded-lg hover:bg-pink-600 transition shadow-lg border border-gray-700 hover:border-pink-500" aria-label="Halaman berikutnya">&rarr;</a>
        <% } %>
    </div>
<% } %>

<% if (currentPage === 1 && typeof cosplays !== 'undefined' && cosplays.length > 0) { %>
<div class="mb-12 pt-8 border-t border-gray-800">
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-3">
            <div class="w-1.5 h-8 bg-purple-500 rounded-full shadow-[0_0_10px_rgba(168,85,247,0.5)]"></div>
            <h2 class="text-2xl font-black text-white tracking-tight uppercase">
                Update <span class="text-purple-500">Cosplay</span>
            </h2>
        </div>
        <a href="/cosplay" class="text-xs font-bold text-purple-400 hover:text-white border border-purple-500/30 hover:bg-purple-600 px-4 py-1.5 rounded-full transition-all">
            Lihat Semua
        </a>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4">
        <% cosplays.forEach((cos) => { %>
        <article class="group bg-gray-900 rounded-xl overflow-hidden border border-gray-800 hover:border-purple-500/50 transition-all duration-300 relative">
            <a href="/cosplay/<%= cos.slug %>" class="block relative aspect-[2/3] overflow-hidden">
                <% if (cos.gallery && cos.gallery.length > 0) { %>
                    <img src="<%= cos.gallery[0] %>" alt="<%= cos.title %>" class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700 ease-out" loading="lazy">
                <% } else { %>
                    <div class="w-full h-full bg-gray-800 flex items-center justify-center text-xs text-gray-600">No Image</div>
                <% } %>
                
                <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
                
                <div class="absolute top-2 right-2 bg-purple-600/90 text-[10px] font-bold px-2 py-0.5 rounded text-white shadow-sm flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                    <%= cos.gallery.length %> Foto
                </div>

                <div class="absolute bottom-0 inset-x-0 p-3">
                    <span class="text-[9px] text-purple-300 font-bold uppercase tracking-wider mb-1 block truncate">
                        <%= cos.character || 'Cosplay' %>
                    </span>
                    <h3 class="text-white text-xs font-bold leading-tight line-clamp-2 group-hover:text-purple-400 transition-colors">
                        <%= cos.title %>
                    </h3>
                </div>
            </a>
        </article>
        <% }) %>
    </div>
</div>
<% } %>

<%- include('partials/footer') %>