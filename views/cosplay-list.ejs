<%- include('partials/header') %>

<div class="flex items-center justify-between mb-8 border-b border-gray-800 pb-4">
  <div class="flex items-center gap-3">
    <div class="w-1.5 h-8 bg-purple-500 rounded-full shadow-[0_0_10px_rgba(168,85,247,0.5)]"></div>
    <h1 class="text-2xl font-black text-white tracking-tight uppercase">
      Koleksi <span class="text-purple-500">Cosplay</span>
      <% if (currentPage > 1) { %>
        <span class="text-gray-600 text-lg font-medium ml-2">/ Halaman <%= currentPage %></span>
      <% } %>
    </h1>
  </div>
  
  <div class="hidden md:block text-xs text-gray-500 font-medium bg-gray-900 px-3 py-1 rounded-full border border-gray-800">
    Total <%= typeof totalCosplays !== 'undefined' ? totalCosplays.toLocaleString() : '0' %> Album
  </div>
</div>

<div class="mb-8 bg-gray-900/50 border border-gray-800 rounded-xl p-4 md:p-6">
  <p class="text-gray-400 leading-relaxed text-sm md:text-base max-w-3xl">
    Jelajahi ribuan koleksi foto cosplay berkualitas tinggi (HD) dari berbagai cosplayer viral, karakter anime, dan game populer. Download gratis via Mediafire, Gofile, dan Telegram.
  </p>
</div>

<% if (cosplays.length > 0) { %>
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 md:gap-6 mb-12">
    <% cosplays.forEach(cos => { %>
      <article class="group bg-gray-900 rounded-xl overflow-hidden border border-gray-800 hover:border-purple-500/50 transition-all duration-300 hover:shadow-[0_0_20px_rgba(168,85,247,0.15)] relative">
        <a href="/cosplay/<%= cos.slug %>" class="block relative aspect-[2/3] overflow-hidden">
          
          <% if (cos.gallery && cos.gallery.length > 0) { %>
            <img src="<%= cos.gallery[0] %>" 
                 alt="<%= cos.title %>" 
                 class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700 ease-out"
                 loading="lazy">
          <% } else { %>
            <div class="w-full h-full bg-gray-800 flex items-center justify-center">
               <span class="text-gray-600 text-xs">No Image</span>
            </div>
          <% } %>

          <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-transparent to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>

          <div class="absolute top-2 right-2 bg-purple-600/90 backdrop-blur-md text-[10px] font-bold px-2 py-0.5 rounded text-white border border-purple-400/30 shadow-sm flex items-center gap-1">
             <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
             <%= cos.gallery.length %>
          </div>

          <div class="absolute bottom-0 inset-x-0 p-3">
             <span class="text-[9px] text-purple-300 font-bold uppercase tracking-wider mb-1 block truncate">
                <%= cos.character || cos.cosplayer || 'Cosplay' %>
             </span>
             <h3 class="text-white text-xs font-bold leading-tight line-clamp-2 group-hover:text-purple-400 transition-colors">
                <%= cos.title %>
             </h3>
             
             <div class="mt-2 pt-2 border-t border-gray-700/50 flex items-center text-[9px] text-gray-500">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                <%= new Date(cos.created_at).toLocaleDateString('id-ID', { day: 'numeric', month: 'short', year: '2-digit' }) %>
             </div>
          </div>
        </a>
      </article>
    <% }) %>
  </div>

  <% if (totalPages > 1) { %>
    <div class="flex justify-center items-center gap-2 mt-8 mb-20">
      <% if (currentPage > 1) { %>
        <a href="/cosplay?page=<%= currentPage - 1 %>"
          class="w-10 h-10 flex items-center justify-center bg-gray-800 text-white rounded-lg hover:bg-purple-600 transition shadow-lg border border-gray-700 hover:border-purple-500" aria-label="Sebelumnya">
          &larr;
        </a>
      <% } %>

      <div class="px-6 py-2 bg-gray-900 border border-gray-800 rounded-lg text-sm font-medium shadow-inner">
        <span class="text-purple-500 font-bold"><%= currentPage %></span>
        <span class="text-gray-600 mx-2">/</span>
        <span class="text-gray-400"><%= totalPages %></span>
      </div>

       <% if (currentPage < totalPages) { %>
        <a href="/cosplay?page=<%= currentPage + 1 %>"
          class="w-10 h-10 flex items-center justify-center bg-gray-800 text-white rounded-lg hover:bg-purple-600 transition shadow-lg border border-gray-700 hover:border-purple-500" aria-label="Berikutnya">
          &rarr;
        </a>
      <% } %>
    </div>
  <% } %>

<% } else { %>
  <div class="min-h-[50vh] flex flex-col items-center justify-center text-center border border-gray-800 rounded-2xl p-10">
     <div class="text-6xl mb-4">ðŸ‘˜</div>
    <h3 class="text-xl font-bold text-white mb-2">Belum ada konten</h3>
    <p class="text-gray-500 mb-6">
      Saat ini belum ada album cosplay yang diupload.
    </p>
    <a href="/" class="px-6 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-full transition font-medium">Kembali ke Beranda</a>
  </div>
<% } %>

<%- include('partials/footer') %>